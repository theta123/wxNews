/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  background-color: #F8F8F8;
  /*background-color: blue;*/
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-section-spacing{
  box-sizing: border-box;
  padding: 0 0rpx;
}

/** footer **/
.footer {
  color: #999999;
  font-size: 14px;
  text-align: center;
  background-color: #fff;
  padding: 20rpx;
}
.footer_fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.footer__links {
  font-size: 0;
}
.footer__link {
  padding-top: 20rpx;
  display: inline-block;
  vertical-align: top;
  margin: 0 .62em;
  position: relative;
  font-size: 14px;
  color: #586C94;
  margin-bottom: 22rpx;
}
.footer__link:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1rpx solid #C7C7C7;
  color: #C7C7C7;
  left: -0.65em;
  top: 0.36em;
  bottom: 0.36em;
}
.footer__link:first-child:before {
  display: none;
}
.footer__text {
  padding: 0.34em;
  font-size: 12px;
}