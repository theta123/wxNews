/* hander */
.header-panel {
  height: 80rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  background-color: #4169e1;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  box-shadow: 0 0.5px 0 0 #ececec;
}
.header-title {
  position: relative;
  width: 120rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  font-size: 32rpx;
  cursor: pointer;
  box-sizing: border-box;
  color: #ffffff;
  /* border-bottom: 2rpx solid rgba(0, 0, 0, 0.2); */
  text-align: center;
}
.header-title-active {
  /* border-bottom: 4rpx solid #C34943; */
  color: #6495ed;
  z-index: 99;
  font-size: 34rpx;
}

.nav-blank {
  height: 80rpx;
}


